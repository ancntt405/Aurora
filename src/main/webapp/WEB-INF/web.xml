<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Shop</display-name>
    <filter>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceRequestEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>forceResponseEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <!-- Cấu hình servlet Home -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>an.dev.HomeServllet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>an.dev.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>an.dev.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>an.dev.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>an.dev.admin.DashboardServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateUserServlet</servlet-name>
        <servlet-class>an.dev.admin.user.CreateUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>an.dev.admin.user.DeleteUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>an.dev.admin.user.EditUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>IndexUserServlet</servlet-name>
        <servlet-class>an.dev.admin.user.IndexUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateBannerServlet</servlet-name>
        <servlet-class>an.dev.admin.banners.CreateBannerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteBannerServlet</servlet-name>
        <servlet-class>an.dev.admin.banners.DeleteBannerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditBannerServlet</servlet-name>
        <servlet-class>an.dev.admin.banners.EditBannerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>IndexBannerServlet</servlet-name>
        <servlet-class>an.dev.admin.banners.IndexBannerServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>an.dev.admin.category.CreateCategoryServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>an.dev.admin.category.DeleteCategoryServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditCategoryServlet</servlet-name>
        <servlet-class>an.dev.admin.category.EditCategoryServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>IndexCategoryServlet</servlet-name>
        <servlet-class>an.dev.admin.category.IndexCategoryServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <servlet-class>an.dev.admin.orders.DeleteOrderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditOrderServlet</servlet-name>
        <servlet-class>an.dev.admin.orders.EditOrderServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>OrderItemServlet</servlet-name>
        <servlet-class>an.dev.admin.orders.OrderItemServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>IndexOrderServlet</servlet-name>
        <servlet-class>an.dev.admin.orders.IndexOrderServlet</servlet-class>
    </servlet>
    <!-- HomeServlet mapping - chỉ dùng /HomeServlet để tránh xung đột -->
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateUserServlet</servlet-name>
        <url-pattern>/CreateUserServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/DeleteUserServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/EditUserServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IndexUserServlet</servlet-name>
        <url-pattern>/IndexUserServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateBannerServlet</servlet-name>
        <url-pattern>/CreateBannerServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteBannerServlet</servlet-name>
        <url-pattern>/DeleteBannerServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditBannerServlet</servlet-name>
        <url-pattern>/EditBannerServlet</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>IndexBannerServlet</servlet-name>
        <url-pattern>/IndexBannerServlet</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/CreateCategoryServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/DeleteCategoryServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditCategoryServlet</servlet-name>
        <url-pattern>/EditCategoryServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IndexCategoryServlet</servlet-name>
        <url-pattern>/IndexCategoryServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <url-pattern>/DeleteOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditOrderServlet</servlet-name>
        <url-pattern>/EditOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OrderItemServlet</servlet-name>
        <url-pattern>/OrderItemServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>IndexOrderServlet</servlet-name>
        <url-pattern>/IndexOrderServlet</url-pattern>
    </servlet-mapping>

    <!-- Let default servlet serve static resources under /assets/* -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/lib/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/img/*</url-pattern>
    </servlet-mapping>

    <!-- Welcome file (trang mặc định) - redirect to HomeServlet -->
    <welcome-file-list>
        <welcome-file>HomeServlet</welcome-file>
    </welcome-file-list>
</web-app>